@model string

<div>
    <h2 class="secondary-title">@Model</h2>
    
    <div id="spinner" class="vh-100 d-flex justify-content-center">
        <div class="spinner-border" style="width: 4rem; height: 4rem;" role="status">
            <span class="sr-only"></span>
        </div>
    </div>

    <div id="images-display">
        <div id="images-container" class="p-row">
            
        </div>
    </div>
</div>

@section Scripts {
    <script>

         function displayBase64Images(base64Images) {
             if (!base64Images)
                return;

            $("#spinner").remove();

            $(sliderPlaceholder).append(`
                <li>
                    <img src="` + base64Images[0] + `" />
                </li>`
            );
            
            for (let image of base64Images) {
                $(imagesPlaceholder).append(`
                    <div class="p-tab">
                        <img src="` + image + `" />
                    </div>`
                );
            }
        }

        function onSuccess(result) {
            let base64Images = result.value
                .map(b64 => 'data:image/jpeg;base64,' + b64);
            displayBase64Images(base64Images)
        }

        function onError(req, status, error) {
            // Do nothing
        }

        let sliderPlaceholder = $('#slides-container');
        let imagesPlaceholder = $('#images-container');

        $.ajax({
            type: "GET",
            url: "@Url.Action("GetAlbum")\?name=@Model",
            dataType: "json",
            success: onSuccess,
            error: onError
        });

    </script>
}